{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} Accueil{% endblock %}

{% block body %}
    <div class="row m-0 container-lg m-lg-auto">
        <main class=" col-12 col-md-9">
            <section class="row p-2">
                <p class="border-bottom border-dark col-12 p-0 h3">Derniers articles publi√©s</p>

                <div class="mainArticle col-12 mb-3">
                    <article class="">
                        <a href="{{ path('article_show', {'id': lastArticle.id}) }}" class="text-decoration-none text-dark row">
                            <img class="col-12 p-0" src="{{ asset('images/'~lastArticle.mainImage) }}" alt="{{ lastArticle.mainImage }}">
                            <h1 class="mainTitle">{{ lastArticle.title }}</h1>
                            <h2 class="h3">{{ lastArticle.secondaryTitle }}</h2>
                        </a>
                    </article>
                </div>

                {% for article in articles %}
                    <div class="otherArticles col-6 mb-3 {{ article.id == lastArticle.id ? 'd-none' }}">
                        <article class="">
                            <a href="{{ path('article_show', {'id': article.id}) }}" class="text-decoration-none text-dark row">
                                <img class="col-12 p-0" src="{{ asset('images/'~article.mainImage) }}" alt="{{ article.mainImage }}">
                                <h3 class="col-12 p-0">{{ article.title }}</h3>
                                <h4 class="h5">{{ article.secondaryTitle }}</h4>
                            </a>
                        </article>
                    </div>
                {% endfor %}
            </section>

        </main>

        <!-- ASIDE -->
        <aside class="col-3 p-2 border-left">
            <p class="border-bottom border-dark p-0">Les plus lus</p>
            <div class="asideArticles mx-0">
                <a href="" class="text-decoration-none text-dark d-flex flex-column justify-content-end mb-2" 
                 style="background-image: url( {{ asset('images/Barro.jpg') }} )">
                    <span class="aside-title h5">Titre de l'article</span>
                </a>
            </div>
        </aside>
    </div>


{% endblock %}