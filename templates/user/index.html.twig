{% extends 'base.html.twig' %}

{% block title %}Index Utilisateurs{% endblock %}

{% block body %}
    <h1>Index Utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Login</th>
                <th>Mail</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Civilité</th>
                <th>Pays</th>
                <th>Avatar</th>
                <th>Description</th>
                <th>Date d'inscription</th>
                <th>Status</th>
                <th>Etat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.login }}</td>
                <td>{{ user.mail }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.civility }}</td>
                <td>{{ user.country }}</td>
                <td>{{ user.avatar }}</td>
                <td>{{ user.description }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.status }}</td>
                <td>{{ user.state }}</td>
                <td>
                    <a href="{{ path('user_index', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_index', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}