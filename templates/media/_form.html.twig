{% block stylesheets %}{% endblock %}
<div class="container-fluid">
    <div class="formMediaTest">
        {{ form_start(form) }}
        
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, {'attr': {'class': 'test',
                                               'class': 'apercu'}}) }}
            {{ form_errors(form.nom) }}
         
        
            {{ form_label(form.legende) }}
            {{ form_widget(form.legende, {'attr': {'class': 'test'}})}}
            {{ form_errors(form.legende) }}
      
        
            {{ form_label(form.texte) }}
            {{ form_widget(form.texte, {'attr': {'class': 'test'}})}}
            {{ form_errors(form.texte) }}
            
            <div class="">
                <button class="btn btn-success" id="btn_image">{{ button_label|default('Save') }}</button>
                <p>Preview</p>
                <img id='preview'>
            </div>
        {{ form_end(form) }}
    </div>
</div>