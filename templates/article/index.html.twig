{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} Accueil{% endblock %}

{% block body %}

    <div class="row m-0 container-lg m-lg-auto">
        <main class=" col-12 col-md-9">
            <section class="row p-2">
                <p class="border-bottom border-dark col-12 p-0 h3">Derniers articles publi√©s</p>
                <div class="mainArticle col-12 mb-3">
                    <article class="row">
                            <img class="col-12 p-0" src="{{ asset('images/berger.jpg') }}" alt="">
                            <h1 class="mainTitle">{{ lastArticle.title }}</h1>
                            <h2>{{ lastArticle.secondaryTitle }}</h2>
                    </article>
                </div>

                {% for article in articles %}
                    <div class="otherArticles col-6 mb-3 {{ article.id == lastArticle.id ? 'd-none' }}">
                        <article class="row">
                            <img class="col-12 p-0" src="{{ asset('images/poulo2.jpg') }}" alt="">
                            <h3 class="col-12 p-0">{{ article.title }}</h3>
                            <h4>{{ article.secondaryTitle }}</h4>
                        </article>
                    </div>
                {% endfor %}
            </section>

        </main>
        <aside class="col-3 p-2 border-left">
            <p class="border-bottom border-dark col-12 p-0">Les plus lus</p>
            <div class="asideArticles row mx-0">
                <img class="col-12 p-0" src="{{ asset('images/Barro.jpg')}}" alt="">
                <p class="h5">Titre de l'article</p>
            </div>
        </aside>
    </div>


{% endblock %}