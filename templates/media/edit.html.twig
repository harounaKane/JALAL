{% extends 'base.html.twig' %}

{% block title %}Edit Media{% endblock %}

{% block body %}
    <h1>Edit Media</h1>

    {{ include('media/_form.html.twig', {'button_label': 'Update'}) }}
    {% if(medium.type == 'image')%}
        <div class="column">
            <div class="ui fluid card med-center">
                <div class="content">
                    <img src="{{ asset('articles/galeries/images/' ~ medium.nom) }}" class=" ui image" height="100px" width="(50px">
                </div>
            </div>
        </div>
    {% elseif medium.type == 'audio' %}
        <div class="column">
            <div class="ui fluid card med-center">
                <div class="content">
                    <audio controls>
                        <source src="{{ asset('articles/galeries/audios/' ~ medium.nom) }}" type="audio/mpeg">
                        <source src="{{ asset('articles/galeries/audios/' ~ medium.nom) }}" type="audio/ogg">
                        Your browser does not support the audio element.
                    </audio> 
                </div>
            </div>
        </div>
    {% elseif medium.type == 'video' %}
        {%if(medium.nom == 'url')%}
            <div class="column">
                <div class="ui fluid card med-center">
                    <div class="content">
                        <iframe width="500" height="300" src="https://www.youtube.com/embed/{{medium.url}}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                        </iframe>
                    </div>
                </div>
            </div>
        {% elseif medium.url == 'fichier' %}
            <div class="column">
                <div class="ui fluid card med-center">
                    <div class="content">
                        <video controls width="500" height="300">
                            <source src="{{ asset('articles/galeries/videos/' ~ medium.nom) }}" type="video/webm">
                            <source src="{{ asset('articles/galeries/videos/' ~ medium.nom) }}" type="video/mp4">
                        </video>  
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}
        
        {# {{ include('media/_delete_form.html.twig') }} #}
{% endblock %}
