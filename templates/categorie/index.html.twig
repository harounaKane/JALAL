{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <main class="container-fluid">
        <h1 class="text-center">Liste des catégories</h1>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Désignation</th>
                <th>Date création</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.designation }}</td>
                    <td>{{ categorie.createdAt ? categorie.createdAt|date('d-/m/Y H:i:s') : '' }}</td>
                    <td>
                        <a class="mx-2" href="{{ path('categorie_show', {'id': categorie.id}) }}"><i class="las
                    la-eye"></i></a>
                        <a class="mx-2" href="{{ path('categorie_edit', {'id': categorie.id}) }}"><i class="las
                    la-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Pas de catégorie</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('categorie_new') }}" class="btn btn-secondary"><i class="las
                    la-plus"></i> Ajouter une catégorie</a>
    </main>
{% endblock %}
