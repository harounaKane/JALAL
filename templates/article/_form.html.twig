{{ form_start(form) }}
    {{ form_row(form.categorie) }}
    {{ form_row(form.title) }}
    {{ form_row(form.secondary_title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.main_image) }}
    <hr class="">
    <div class="">
	    <section class="form_img row">
		    <div id="btn_image" class="btn border border-secondary col-12 my-1" data-toggle="collapse" data-target="#formMedia" aria-expanded="false" aria-controls="formMedia">
		    	Ajouter une image <i class="fa fa-plus"></i>
		    </div>
			<div id="image_holder" data-img-count="0">
				{% for medium in form.media %}
					{{ form_widget(medium) }}
				{% endfor %}
			</div>
		</section>
	    <section class="form_video row">
		    <button id="btn_video" class="btn border border-secondary col-12 my-1" data-toggle="collapse" data-target="#formMedia" aria-expanded="false" aria-controls="formMedia">
		    	Ajouter une vid√©o <i class="fa fa-plus"></i>
		    </button>
		</section>
	    <section class="form_audio row">
		    <button id="btn_audio" class="btn border border-secondary col-12 my-1" data-toggle="collapse" data-target="#formMedia" aria-expanded="false" aria-controls="formMedia">
		    	Ajouter de l'audio <i class="fa fa-plus"></i>
		    </button>
		</section>
	</div>
</div>

	<span id="media_prototype" data-prototype="{{ form_widget(form.media.vars.prototype)|e('html_attr') }} <button id='pour valider le media en cours'>Ajouter</button>"></span>
    <button class="btn btn-primary">{{ button_label|default('Ajouter') }}</button>
{{ form_row(form._token) }}
{{ form_end(form, {'render_rest': false}) }}
